rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isAuthenticated() {
      return request.auth != null;
    }

    function getUserRole() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role;
    }

    function isAdmin() {
      return isAuthenticated() && getUserRole() == 'admin';
    }

    function isWorker() {
      return isAuthenticated() && getUserRole() == 'worker';
    }

    function hasPermission(permission) {
      return isAuthenticated() &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.permissions[permission] == true;
    }

    match /users/{userId} {
      allow read: if isAuthenticated();
      allow create, update, delete: if isAdmin();
    }

    match /brands/{brandId} {
      allow read: if true;
      allow write: if isAdmin() || hasPermission('canManageProducts');
    }

    match /products/{productId} {
      allow read: if true;
      allow write: if isAdmin() || hasPermission('canManageProducts');
    }

    match /categories/{categoryId} {
      allow read: if true;
      allow write: if isAdmin() || hasPermission('canManageProducts');
    }

    match /orders/{orderId} {
      allow read: if isAdmin() || isWorker() || hasPermission('canManageOrders');
      allow create: if true;
      allow update: if isAdmin() || hasPermission('canManageOrders');
      allow delete: if isAdmin();
    }

    match /invoices/{invoiceId} {
      allow read: if isAdmin() || hasPermission('canManageInvoices');
      allow create, update: if isAdmin() || hasPermission('canManageInvoices');
      allow delete: if isAdmin();
    }

    match /delivery_wilayas/{wilayaId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /site_settings/{settingId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /audit_logs/{logId} {
      allow read: if isAdmin();
      allow create: if true;
      allow update, delete: if false;
    }
  }
}
